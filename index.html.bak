<!doctype html>
<html>
<head>
	<title> PXL Login </title>
	<link rel='stylesheet' href='pxl.css'>
	<style>
		.inputBox {
			width: 25%;
			padding: 5px;
		}
		body {
			text-align: center;
			margin: 200px;
			font-size: 150%;
		}
	</style>
	<script> 
	var myBtn = document.getElementById('signIn');
		
	myBtn.addEventListener('click', Window);
	
	function Window() {
		var name = document.getElementById('username').value;
		var password = document.getElementById('pwd').value;
		
		if(name == 'pxlStaff' && password == 'Patriots2022!') {
		window.location.href='directory.html';
		}
		else {
		alert('Incorrect Username or Password');
		}
	}
	</script>
</head>

<h1> Welcome To PatriotXL Sign In </h1>

<body>
	<form>
	<label for="username">Username:</label><br>
	<input type="text" id="username" class='inputBox'><br>
	<label for="pwd">Password:</label><br>
	<input type="password" id="pwd" class='inputBox'><br>
	<br>
	</form>
	<button type='button' id='signIn' style='padding: 12px 24px; font-size: 30px'> Sign In </button>
</body>

</html>